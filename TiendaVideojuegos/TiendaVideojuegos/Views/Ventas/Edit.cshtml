@model TiendaVideojuegos.Models.Ventas

@{
    ViewData["Title"] = "Edit";
}

<body class="fondo-compra">
    <center>
        <font color="white">
            <h1>Editar</h1>
        </font>
    </center>
    <hr />
    <div>
        <a class="button7" asp-action="Index">Back to List</a>
    </div>
    <div class="login-box">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdUnidad" />
                <input type="hidden" asp-for="IdAbonado" />
                <div class="form-group">
                    <label asp-for="FechaVenta" class="control-label"></label>
                    <input asp-for="FechaVenta" class="form-control" />
                    <span asp-validation-for="FechaVenta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    </body>

