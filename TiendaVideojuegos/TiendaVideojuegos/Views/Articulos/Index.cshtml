@model IEnumerable<TiendaVideojuegos.Models.Articulos>

@{
    ViewData["Title"] = "Index";
}
<body class="fondo-compra">
    <center> <font color="white"><h1>Artículos</h1></font></center>
<hr />

<table class="table" bgcolor="#FFFFFF">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUnidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdProducto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticuloNuevoAbastecimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArticuloSegundaManoReventa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendido)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUnidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticuloNuevoAbastecimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ArticuloSegundaManoReventa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendido)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.IdUnidad">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>